{
  "name": "Media downloader for Instagram",
  "options_page": "options.html",
  "background": {
    "scripts": ["background.bundle.js"],
    "persistent": true
  },
  "permissions": [
    "webRequest",
    "*://*.instagram.com/",
    "downloads",
    "storage"
  ],
  "web_accessible_resources": [
    "*.png",
    "captureXHRResponse.js",
    "asset/img/*.*"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "asset/img/icon-128.png"
  },
  "icons": {
    "128": "asset/img/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "js": [
        "asset/js/jquery-3.5.1.slim.min.js",
        "asset/js/popper.min.js",
        "asset/js/bootstrap.min.js",
        "contentScript.bundle.js"
      ],
      "css": ["asset/css/inject.css", "asset/css/bootstrap.min.css"],
      "runAt": "document_end"
    }
  ],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
